                                            `)
                                            $('.svg-close').click(e => {
                                                e.preventDefault()
                                                $('.wrap__alert').remove()
                                            })
                                        }else{
                                            socket.emit('join room', res.uniqueChatName)
                                            
                                            $('.wrap__form-send-message > *').remove()
                                            $('.wrap__form-send-message').append(`
                                                <form class="form-send-message flex items-center" method="post" action="/send-message/${url}">
