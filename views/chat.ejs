                            $.ajax({
                                url: `/leave/${url}`,
                                method: "get",
                                headers: {
                                    'Authorization': `Bearer ${localStorage.token}`
                                },
                                success: res => {
                                    if(res.message){
                                        $('.wrap__alert').append(`
                                            <div class="alert-main bg-red-100 mb-4 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
