                    </div>
                `)
            
                
            
                $.ajax({
                    url: `/is-user-join-chat/${url}`,
                    method: 'get',
                    headers: {
                        'Authorization': `Bearer ${localStorage.token}`
                    },
                    success: res => {
                        if(res.ok === -2){
                            $('.wrap__form-send-message > *').remove()
                            $('.wrap__form-send-message').append(`
                                <div class="wrap-join-button">
                                    <button class="btn-join rounded">Join to chat</button>
