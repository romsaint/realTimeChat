                </form>
            </div>
        </div>
    </div>
</body>

<div id="loading-overlay" class="hidden">
    <div class="spinner"></div>
</div>

<script>
    function darkOff(){
        $.ajax({
            url: "/darkmodeOff",
            method: 'get',
            headers: {
                'Authorization': `Bearer ${localStorage.token}`
            },
            success: res => {
                if(res.ok){
                    themeLink.href = '../static/chatLightMode.css';
                }
            }
        })
    }
    function darkOn(){
        $.ajax({
            url: "/darkmodeOn",
            method: 'get',
            headers: {
                'Authorization': `Bearer ${localStorage.token}`
            },
            success: res => {
                if(res.ok){
                    themeLink.href = '../static/chatDarkMode.css';
                }
            }
        })
    }

    const darkModeToggle = document.getElementById('dark-mode-toggle');
    const themeLink = document.getElementById('theme-link');

    $.ajax({
        url: '/darkmodeCheck',
        method: 'get',
        headers: {
            'Authorization': `Bearer ${localStorage.token}`
        },
        success: res => {
            if(res.mode === true){
                darkModeToggle.checked = true
                darkOn()
            }else{
                darkOff()
            }
        }
    })

    
    darkModeToggle.addEventListener('change', function() {
        if (darkModeToggle.checked) {
            console.log('CHECK')
            darkOn()
        } else {
            darkOff()
        }
    });

    socket.on('user message', (message) => {
        $('.chat').append(`
            <div class="wrap__my-message">
                <div class="my-message mb-2">
                    <p class="message-text">${message.text}</p>
                    <li class="date-message">${new Date(message.date_created).toLocaleTimeString().slice(0, 5)}</li>
                </div>
            </div>
        `)

        let chatH = 0
        const myMesagesH = $('.chat > *')
        for(i of myMesagesH){
            chatH += $(i).height()
        }
        $('.inner-chat-container').scrollTop(chatH)
    })
    socket.on('chat message', (message, sender) => {
        $('.chat').append(`
            <div class="wrap__my-message">
                <div class="my-message mb-2">
                    <div class="name-container">
                        <p class="message-text">${message.text}</p>
                    </div>
                    <li class="date-message">${new Date(message.date_created).toLocaleTimeString().slice(0, 5)}</li>
                </div>
            </div>
        `)

        let chatH = 0
        const myMesagesH = $('.chat > *')
        for(i of myMesagesH){
            chatH += $(i).height()
        }
        $('.inner-chat-container').scrollTop(chatH)
    })
    //      SOCKET END          //           //
    const url = window.location.href.split('/chat/')[1]

    $('.search-form').keydown(e => {
        setTimeout(() => {
            const form = $(e.currentTarget)
            
            $.ajax({
                url: "/search-users",
                method: 'post',
                data: form.serialize(),
                headers: {
                    'Authorization': `Bearer ${localStorage.token}`
                },
                success: res => {
                    $('.users > *').remove()
                    console.log(res)
                    if(res.users.length > 0){
                        for(i of res.users){
