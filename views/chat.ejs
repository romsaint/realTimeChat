                                                <img src="${i.avatar === undefined ? '/userAvatars/user-question-alt-svgrepo-com.png' : i.avatar}" alt="User avatar" class="user-avatar ${i.avatar === undefined ? 'no-avatar' : ''}">
                                            </div>
                                            <div class="username">
                                                ${i.username}
                                            </div>
                                        </div> 
                                    </a>
